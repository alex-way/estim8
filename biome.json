{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "formatter": {
        "indentStyle": "tab",
        "lineWidth": 120
    },
	"linter": {
		"enabled": true,
		"rules": {
			"complexity": {
				"noBannedTypes": {
					"level": "off"
				}
			}
		}
	},
	"overrides": [
		{
		  "include": ["*.svelte"],
		  "linter": {
			"rules": {
			  "style": {
				"useConst": "off"
			  }
			}
		  }
		}
	  ]
}
